{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@baseComponents/*": ["src/baseComponents/*"],
      "@components/*": ["src/components/*"],
      "@constant/*": ["src/constant/*"],
      "@modules/*": ["src/modules/*"],
      "@navigations/*": ["src/navigations/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
